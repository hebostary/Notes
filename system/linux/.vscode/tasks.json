{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "[linux]build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",//生成和调试有关信息
			    "-o",
                "${workspaceFolder}/linux.bin",
                "-m64", // 不知为何有时会生成16位应用而无法运行，加上此条可强制生成64位的
                "-Wall", // 开启额外警告
                "-static-libgcc",     // 静态链接libgcc，一般都会加上
                "-fexec-charset=GBK", // 生成的程序使用GBK编码，不加这条会导致Win下输出中文乱码；繁体系统改成BIG5
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/io/*.cpp",
				"${workspaceFolder}/src/memory/*.cpp",
				"-l",
				"aio",
            ],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "[windows]build std active file",
			"command": "C:\\Program Files\\mingw64\\bin\\g++.exe",
			"args": [
				"-g",//生成和调试有关信息
			    "-o",
                "${workspaceFolder}\\bin\\std.exe",
                "-m64", // 不知为何有时会生成16位应用而无法运行，加上此条可强制生成64位的
                "-Wall", // 开启额外警告
                "-static-libgcc",     // 静态链接libgcc，一般都会加上
                "-fexec-charset=GBK", // 生成的程序使用GBK编码，不加这条会导致Win下输出中文乱码；繁体系统改成BIG5
                "${workspaceFolder}\\src\\*.cpp",
                "${workspaceFolder}\\src\\io\\*.cpp",
                "${workspaceFolder}\\src\\memory\\*.cpp",
				"-l",
				"aio",
            ],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}